<ui:UiPage x:Class="Universal_x86_Tuning_Utility.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Universal_x86_Tuning_Utility.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Главная панель"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Scrollable="True"
    ScrollViewer.PanningMode="VerticalFirst"
    Stylus.IsFlicksEnabled="False"
    Stylus.IsTouchFeedbackEnabled="True"
    ScrollViewer.IsDeferredScrollingEnabled="False"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="164" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            MinHeight="425"
            CornerRadius="8,0,0,0">
                <Border.Background>
                    <ImageBrush
                    ImageSource="pack://application:,,,/Assets/pexels-photo-8037008.jpeg"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Stretch="UniformToFill" />
                </Border.Background>
                <Border CornerRadius="8,0,0,0">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0" Color="#1F000000" />
                            <GradientStop Offset="1" Color="#4F000000" />
                        </RadialGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!--Background="#66242424"-->
                        <Border Margin="64"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" CornerRadius="8" Padding="9">
                        <StackPanel
                        
                        Background="Transparent">
                            <TextBlock
                            FontSize="18"
                            Foreground="#B7FFFFFF"
                            Text="Добро пожаловать в" />
                            <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="#FFFFFF"
                            Text="Universal x86 Tuning Utility" />
                            <TextBlock
                            FontSize="18"
                            Foreground="#B7FFFFFF"
                            Text="V2.5.4 Стабильная" />
                            <ui:Button
                                Name="btnPremade"
                            Height="36"
                            Margin="0,12,0,0"
                            Padding="30,6"
                            HorizontalAlignment="Left"
                            Appearance="Transparent"
                            Command="{Binding ViewModel.NavigateCommand}"
                            CommandParameter="premade"
                            Content="Попробуйте готовые пресеты"
                            Foreground="{DynamicResource TextFillColorLightPrimaryBrush}" />
                        </StackPanel>
                        </Border>
                        <TextBlock
                        Margin="12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="10"
                        Foreground="#57FFFFFF"
                        Text="Создано JamesCJ, sbski, ProjectSBC и вами!" />

                    <Border Width="320" Height="120" HorizontalAlignment="Left" VerticalAlignment="Bottom" CornerRadius="0,4,0,0">
                        <Border.Background>
                            <ImageBrush
    ImageSource="pack://application:,,,/Assets/PCC Banner.png"
    RenderOptions.BitmapScalingMode="HighQuality"
    Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>
                    </Grid>
                </Border>
            </Border>

        <Grid Grid.Row="1" Margin="12,18,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardAction
                Name="caPremade"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="premade"
                Icon="Predictions20"
                IsChevronVisible="True">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Готовые пресеты" />
                </StackPanel>
            </ui:CardAction>

            <ui:CardAction
                Grid.Row="0"
                Grid.Column="1"
                Margin="4,0,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="custom"
                Icon="Book20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Пользовательские пресеты" />
                </StackPanel>
            </ui:CardAction>

            <ui:CardAction
                Grid.Row="0"
                Grid.Column="2"
                Margin="4,0,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="adaptive"
                Icon="Radar20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Адаптивный режим" />
                </StackPanel>
            </ui:CardAction>

            <ui:CardAction
                Grid.Row="0"
                Grid.Column="3"
                Margin="4,0,0,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="auto"
                Icon="Transmission20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Автоматизация" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="1"
                Margin="4,8,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="info"
                Icon="Info20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Информация о системе" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,8,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="games"
                Icon="Games20" 
                IsEnabled="true">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Библиотека игр" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="2"
                Margin="4,8,4,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="help"
                Icon="ChatHelp20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Нужна помощь?" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="3"
                Margin="4,8,0,0"
                Command="{Binding ViewModel.NavigateCommand}"
                CommandParameter="support"
                Icon="Money20">
                <StackPanel>
                    <TextBlock
                        Margin="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Поддержите нас" />
                </StackPanel>
            </ui:CardAction>
        </Grid>
    </Grid>
</ui:UiPage>